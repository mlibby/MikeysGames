<main class='pathwords server'>
  <section id='game'>
    <div class='big-info stage-1' style='display:none;'>
      Game starts in:<br />
      <span id='starts-in'><%= @game.get_timer %></span> seconds
    </div>
    <div class='big-info stage-2' style='display:none;'>
      Time left:<br />
      <span id='time-left'><%= @game.get_timer %></span> seconds
    </div>
    <div class='big-info game-over stage-3' style='display:none;'>
      GAME OVER
    </div>
    <%= erb :"pathwords/board" %>
    <div id='connect-info' class='stage-0'>
      <p class='big'>Connect to this server at <tt><%= @server %></tt> or scan this code</p>
      <%= @qr_code %>
    </div>
  </section>
  <section id='players'>
    <h2>Players</h2>
    <div class='stage-0' style='display:none;'>
      <p id='players-needed'>
        Please enter a number of players to expect on your player screen
      </p>
      <p id='players-joining' style='display:none;'>
        <span id='player-count'>-</span> / 
        <span id='players-expected'>-</span>
        players have joined the game
      </p>
    </div>
    <ul id='player-list'></ul>
  </section>
</main>
<script src="/js/pathwords/serve.js"></script>
