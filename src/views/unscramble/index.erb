<h1>Unscramble</h1>
<section class='unscramble'>
  <div class='board'>
    <% 0.upto(3) do |row| %>
      <div>
        <% 0.upto(3) do |col| %>
          <button id='cell-<%= row %>-<%= col %>' class='die'>
            <%= @board[row][col].showing %>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
  <h2>Your Words</h2>
  <textarea></textarea>
</section>
<script src="/js/unscramble.js"></script>
